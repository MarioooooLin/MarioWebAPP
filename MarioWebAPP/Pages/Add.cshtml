                            <option :value="cou" v-for="(cou, index) in country" :key="index">{{cou}}</option>
                        </select>                        
*@                    

                        <selectcomponent v-model="countryIndex" :options="country" :value="countryIndex" class="d-block form-select"/>

</div>
                    <div class="form-group col-6">

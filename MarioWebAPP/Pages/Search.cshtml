@page
@model MarioWebAPP.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}
<div id="root">
    <div class="container">

        <div class="mt-3 fixed">
            <form class="px-4">
                <div class="Title list-inline"><h2 class="list-inline-item">Search the account</h2><h6 class="list-inline-item">(Please provide one condition at least.)</h6></div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="Account" class="d-block">Record date</label>
                        <div class="d-inline-flex">
                            <input type="date"
                                   class="form-control"
                                   id="recordDate"
                                   aria-describedby="emailHelp"
                                   placeholder="Date" />
                            <span class="h3">~</span>
                            <input type="date"
                                   class="form-control"
                                   id="recordDate"
                                   aria-describedby="emailHelp"
                                   placeholder="Date" />
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <label for="Password">Serial number</label>
                        <input type="password"
                               class="form-control"
                               id="serialNumber"
                               placeholder="Serial number" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        @*國家*@
                        <label for="">Country </label>

                        <select name="Country" id="country" v-model="selectedCountry" class="d-block form-select">
                            <option value="" selected disabled>-Select-</option>
                            <option :value="cou" v-for="(cou, index) in country" :key="index">{{cou}}</option>
                        </select>
                    </div>
                    <div class="form-group col-6">
                        @*城市*@
                        <label for="City">City </label>

                        <select name="City" id="city" v-model="selectedCity" class="d-block form-select">
                            <option value="" selected disabled>-Select-</option>
                            <option :value="cit" v-for="(cit, index) in city" :key="index">{{cit}}</option>
                        </select>

                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="Country">Sales</label>
                        <select name="Sales" id="sales" class="d-block form-control">
                            <option :value="Select" selected disabled>-Select-</option>
                            <option :value="sales" v-for="(sa, index) in sales" :key="index">{{sa}}</option>
                        </select>
                    </div>
                    <div class="form-group col-6">
                        <label for="account">Account</label>
                        <input type="password" class="form-control" id="serialNumber" placeholder="Account" />
                    </div>
                </div>
                <div class="row col-2 mx-auto">
                    <button class="px-2 py-1 btn btn-primary">Search</button>
                </div>
            </form>
        </div>
        <div class="mt-3 fixed">
            <table class="table table-info table-bordered">
                <tr>
                    <th>Select</th>
                    <th>Record date</th>
                    <th>Serial number</th>
                    <th>Account</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Modify</th>
                </tr>
                <tr>
                    <td><input type="checkbox" name="" id="" /></td>
                    <td>2023-4-24</td>
                    <td>Mem20230424001</td>
                    <td>aaa@aaa.aaa.tw</td>
                    <td>TW</td>
                    <td>Taipei</td>
                    <td>Mario</td>
                    <td>Male</td>
                    <td><a href="">Update</a>/<a href="">Delete</a></td>
                </tr>
            </table>
            <div class="row col-2 mx-auto">
                <button class="px-2 py-1 btn btn-primary">Batch delete</button>
            </div>
        </div>
    </div>
</div>

